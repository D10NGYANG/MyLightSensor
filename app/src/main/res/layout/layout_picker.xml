<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.pl.wheelview.WheelView
        android:id="@+id/house_wv"
        android:layout_width="100dp"
        android:layout_height="250dp"
        app:itemNumber="5"
        app:lineColor="@color/colorAccent"
        app:lineHeight="1.5dp"
        app:maskDarkColor="#00000000"
        app:maskLightColor="#00000000"
        app:noEmpty="true"
        app:normalTextColor="#dcdcdc"
        app:normalTextSize="12sp"
        app:selectedTextColor="#ffffff"
        app:selectedTextSize="14sp"
        app:unitHeight="20dp" />

    <com.pl.wheelview.WheelView
        android:id="@+id/place_wv"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        app:itemNumber="5"
        app:lineColor="@color/colorAccent"
        app:lineHeight="1.5dp"
        app:maskDarkColor="#00000000"
        app:maskLightColor="#00000000"
        app:noEmpty="true"
        app:normalTextColor="#dcdcdc"
        app:normalTextSize="12sp"
        app:selectedTextColor="#ffffff"
        app:selectedTextSize="14sp"
        app:unitHeight="20dp" />

    <com.pl.wheelview.WheelView
        android:id="@+id/dothing_wv"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        app:itemNumber="5"
        app:lineColor="@color/colorAccent"
        app:lineHeight="1.5dp"
        app:maskDarkColor="#00000000"
        app:maskLightColor="#00000000"
        app:noEmpty="true"
        app:normalTextColor="#dcdcdc"
        app:normalTextSize="12sp"
        app:selectedTextColor="#ffffff"
        app:selectedTextSize="14sp"
        app:unitHeight="20dp" />

</LinearLayout>